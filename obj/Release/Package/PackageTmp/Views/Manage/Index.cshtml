@model DiplomSite.Models.IndexViewModel
@{
    ViewBag.Title = "Управление";
}
<style>
    h2{
        color: rgb(219,216,216);
        margin-bottom: 25px;
    }

    dt, dd {
        color: rgb(157, 157, 157);
    }
    dt{
        padding-right: 20px;
    }

    #td_1 {
        text-align: center;
    }
</style>
<h2>Изменение параметров учетной записи</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <dl class="dl-horizontal">
        <dt style="width: 200px">Пароль:</dt>
        <dd>
            [
            @if (Model.HasPassword)
            {
                @Html.ActionLink("Смена пароля", "ChangePassword")
            }
            else
            {
                @Html.ActionLink("Создать", "SetPassword")
            }
            ]
        </dd>
        <dt style="width: 200px">Удалить аккаунт:</dt>
        <dd>
            [@Html.ActionLink("Удалить", "Delete")]
        </dd>
        <dt style="width: 200px">Редактировать профиль:</dt>
        <dd>
            [@Html.ActionLink("Редактировать", "Edit")]
        </dd>
